function numPrimo(numero){
    if (typeof numero !== "number") {
        return "esse valor Ã© invalido";
    }    
    if (numero < 2)
        return false;
    
    for (let i = 2; i <= numero / 2; i++) {
        if (numero % i === 0) {
            return false; 
        }
    }

    return true; 
}

console.log(numPrimo(7)); 
console.log(numPrimo(10));  
console.log(numPrimo(2)); 
console.log(numPrimo("fer"));
